    <style>
        .dropbtn {
            color: #bdbdbd !important;
            padding: 15px 15px 15px 15px;
            display: block;
            font-size: 22px;
            background-color: transparent;
            line-height: 20px;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: max-content;
            text-align: center;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: #556b8d;
                padding: 12px 16px;
                text-decoration: none;
                font-size: 20px;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #ddd;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            color: white !important;
        }

        .parent {
            display: block;
            position: relative;
            float: right;
            text-align: center;
            line-height: 30px;
            background-color: #556b8d;
            font-size: 20px;
            font-weight: bold;
        }

            .parent a {
                margin: 10px;
                color: #FFFFFF;
                text-decoration: none;
            }

            .parent:hover > ul {
                display: block;
                position: absolute;
            }

        .child {
            display: none;
        }

            .child li {
                background-color: #c3b3b5;
                line-height: 30px;
                border-bottom: #CCC 4px solid;
                border-right: #CCC 1px solid;
                width: 100%;
            }

                .child li a {
                    color: white;
                }

        ul {
            list-style: none;
            margin: 0;
            padding: 0px;
            min-width: 10em;
        }

            ul ul ul {
                right: 100%;
                top: 0;
                margin-left: 1px;
            }

        li:hover {
            background-color: #c3b3b5;
        }

        .parent li:hover {
            background-color: #556b8d;
        }

        .expand {
            font-size: 12px;
            float: left;
            margin-right: 5px;
        }
    </style>
