@model Abstracts.Models.Setting

@{ ViewData["Title"] = "بيانات المسئولين";}

<div class="pageheader">
    <h1>بيانات المسئولين</h1>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">أنت الان علي :</span>
        <ol class="breadcrumb">
            <li>
                <a style=" color: #fff;  " href="javascript:void(0);">الصلاحيات</a>
            </li>
            <li class="active">بيانات المسئولين</li>
        </ol>
    </div>
</div>

<section id="main-content" class="animated fadeInUp">
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">

                <div class="panel-body">

                    <div class="table-responsive">
                        <form id="rolefrm">
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="Code">
                                            رئيس الجهاز
                                        </label>
                                        <input type="text" class="form-control" name="President" id="President" value="@Model.President" placeholder="أدخل إسم رئيس الجهاز">
                                    </div>
                                </div>



                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="Code">
                                            المكتب الفني
                                        </label>
                                        <input type="text" class="form-control" name="Technical" id="Technical" value="@Model.Technical" placeholder="أدخل إسم  المكتب الفني">
                                    </div>

                                </div>
                                <div class="col-md-3" style="text-align: center;">
                                    <br />
                                    <a id="savebutton" class="btn btn-success" onclick="saveSetting();">
                                        <i class="fa fa-save"></i> حفظ
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="Code">
                                            القسم
                                        </label>
                                        @(Html.Kendo().ComboBox()
.Name("Department")
.DataTextField("DepartmentName")
.DataValueField("DepartmentId")
.Placeholder("القسم")
.Events(e =>
{
    e.Select("onChangeDepartment");
})
.DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("GetAllDepartments", "Setting");
                })
                .ServerFiltering(false);
            })
.Filter("contains")
)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <input type="checkbox" name="VicePresidentchk" id="VicePresidentchk">
                                        <label for="Code">
                                            نائب رئيس الجهاز
                                        </label>
                                        <input type="text" class="form-control" name="VicePresident" id="VicePresident" placeholder="أدخل إسم نائب رئيس الجهاز" disabled>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <input type="checkbox" name="Engineerchk" id="Engineerchk">
                                        <label for="Code">
                                            المشرف علي الإدارة
                                        </label>
                                        <input type="text" class="form-control" name="Engineer" id="Engineer" placeholder="أدخل إسم  المشرف علي الإدارة" disabled>
                                    </div>

                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <input type="checkbox" name="GeneralDirectorchk" id="GeneralDirectorchk">
                                        <label for="Code">
                                            المدير العام
                                        </label>
                                        <input type="text" class="form-control" name="GeneralDirector" id="GeneralDirector" placeholder="أدخل إسم  المدير العام" disabled>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <input type="checkbox" name="GeneralManagerchk" id="GeneralManagerchk">
                                        <label for="Code">
                                            مدير الإدارة
                                        </label>
                                        <input type="text" class="form-control" name="GeneralManager" id="GeneralManager" placeholder="أدخل إسم مدير الإدارة" disabled>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/Ajax/Setting.js" type="text/javascript"></script>